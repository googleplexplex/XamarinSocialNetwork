<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinNetworkProj.Views.AccountPage"
             x:Name="AccountPageView">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Vertical" Margin="15,15,0,0">
                <Label x:Name="NicknameLabel" FontSize="Large"  Text="{Binding nickname}" />
                <Label x:Name="DescLabel" Text="{Binding desc}" FontAttributes="Italic" />
                <ListView x:Name="postsList" ItemSelected="OnItemSelected" HasUnevenRows="True">z
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <StackLayout Orientation="Vertical" Margin="0,10">
                                        <Label Text="{Binding Id}"></Label>
                                        <Label Margin="15,0,0,0" >
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="by " FontSize="Small" />
                                                    <Span FontSize="Medium" Text="{Binding autorName}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label Text="{Binding content}" MaxLines="1" FontSize="Medium" Margin="10,0,0,0" />

                                        <Grid Margin="10,0,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Ellipse Grid.Column="0" Grid.Row="0" Fill="{Binding Path=likedByUser, Mode=TwoWay}" />
                                            <Label Grid.Column="1" Grid.Row="0" Text="{Binding likes}" Margin="0,5,0,0" />

                                            <ImageButton Source="icon_liked.png" BackgroundColor="Transparent"  Aspect="AspectFit" Grid.Column="0" Grid.Row="0" Command="{Binding ClickCommand, Source={x:Reference AccountPageView}}" CommandParameter="{Binding .}"/>
                                        </Grid>

                                    </StackLayout>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>